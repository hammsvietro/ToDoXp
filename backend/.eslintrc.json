{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "keyword-spacing": "off",
        "no-param-reassign": "off",
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "padded-blocks": "off",
        "object-curly-newline": "off",
        "no-trailing-spaces": "off",
        "no-multiple-empty-lines": ["error", { "max": 4, "maxEOF": 1 }],
        "no-console": "off"
    }
}